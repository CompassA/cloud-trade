<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.study.trade.commodity.sequence.SequencePOMapper">

  <resultMap id="BaseResultMap" type="org.study.trade.commodity.mapper.data.SequencePO">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="value" jdbcType="BIGINT" property="value" />
    <result column="step" jdbcType="BIGINT" property="step" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
  </resultMap>

  <sql id="Base_Column_List">
    id, name, value, step, create_time, update_time
  </sql>

  <select id="selectByPrimaryKey" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from sequence
    where id = #{id,jdbcType=INTEGER}
  </select>


  <update id="casUpdateValue">
    UPDATE `sequence`
    SET `value` = #{newValue}
    WHERE `id` = #{id} AND `value` = #{oldValue}
  </update>
</mapper>